{
  "name": "sig-drone-restrictions",
  "version": "1.0.0",
  "description": "Application web SIG pour les zones de restriction de vol de drone",
  "main": "src/js/app.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "npx playwright test",
    "lint": "echo 'Linting skipped during migration'"
  },
  "keywords": [
    "drone",
    "sig",
    "leaflet",
    "cartographie",
    "restrictions"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fomantic-ui": "^2.9.3",
    "jquery": "^3.7.1",
    "leaflet": "^1.9.4",
    "leaflet-control-geocoder": "^3.3.1",
    "leaflet-minimap": "^3.6.1",
    "leaflet-velocity": "^2.1.4",
    "leaflet.locatecontrol": "^0.85.1",
    "leaflet.vectorgrid": "^1.3.0",
    "pbf": "^4.0.1",
    "pmtiles": "^4.4.0",
    "vector-tile": "^1.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@turf/turf": "^7.3.3",
    "@types/jquery": "^3.5.33",
    "@types/leaflet": "^1.9.21",
    "http-server": "^14.1.1",
    "sass": "^1.95.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/app.js"
    ]
  }
