{
  "name": "sig-drone-restrictions",
  "version": "1.0.0",
  "description": "Application web SIG pour les zones de restriction de vol de drone",
  "main": "src/js/app.js",
  "scripts": {
    "start": "http-server -p 8080",
    "dev": "http-server -p 8080 -c-1",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm run test && npm run lint && echo 'Build successful - Architecture modulaire prête'",
    "lint": "node -c src/js/app.js && echo '✅ Syntaxe JavaScript OK'"
  },
  "keywords": [
    "drone",
    "sig",
    "leaflet",
    "cartographie",
    "restrictions"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fomantic-ui": "^2.9.3",
    "jquery": "^3.7.1",
    "leaflet": "^1.9.4",
    "leaflet-minimap": "^3.6.1",
    "leaflet.locatecontrol": "^0.85.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/app.js"
    ]
  }
}
